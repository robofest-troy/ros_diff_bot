<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="diffbot" params="prefix">

  <!-- Constants for robot dimensions (from my_robot.urdf.xml) -->
  <xacro:property name="PI" value="3.1415926535897931"/>
  <xacro:property name="base_mass" value="1.0" />
  <xacro:property name="base_width" value="0.254" />
  <xacro:property name="base_length" value="0.2023" />
  <xacro:property name="base_height" value="0.1016" />
  <xacro:property name="wheel_mass" value="0.2" />
  <xacro:property name="wheel_len" value="0.03175" />
  <xacro:property name="wheel_radius" value="0.041275" />


  <!-- Base footprint -->
  <link name="${prefix}base_footprint"/>
  
  <joint name="${prefix}base_footprint_joint" type="fixed">
    <parent link="${prefix}base_link"/>
    <child link="${prefix}base_footprint"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>

  <!-- Base Link -->
  <link name="${prefix}base_link">
    <inertial>
      <mass value="${base_mass}"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
    <visual>
      <geometry>
        <box size="${base_width} ${base_length} ${base_height}"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.041275"/>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <box size="${base_width} ${base_length} ${base_height}"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.041275"/>
    </collision>
  </link>

  <!-- Front Left Wheel (left_wheel in the original diffbot) -->
  <joint name="${prefix}left_wheel_joint" type="continuous">
    <parent link="${prefix}base_link"/>
    <child link="${prefix}left_wheel"/>
    <origin xyz="0.1016 0.1329 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.2"/>
    <limit effort="100" velocity="1.0"/>
  </joint>

  <link name="${prefix}left_wheel">
    <visual>
      <origin rpy="${PI/2} 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="${wheel_len}" radius="${wheel_radius}"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="${wheel_len}" radius="${wheel_radius}"/>
      </geometry>
      <origin rpy="${PI/2} 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <origin rpy="${PI/2} 0 0" xyz="0 0 0"/>
      <mass value="${wheel_mass}"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Front Right Wheel (right_wheel in the original diffbot) -->
  <joint name="${prefix}right_wheel_joint" type="continuous">
    <parent link="${prefix}base_link"/>
    <child link="${prefix}right_wheel"/>
    <origin xyz="0.1016 -0.1329 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.2"/>
    <limit effort="100" velocity="1.0"/>
  </joint>

  <link name="${prefix}right_wheel">
    <visual>
      <origin rpy="${PI/2} 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="${wheel_len}" radius="${wheel_radius}"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="${wheel_len}" radius="${wheel_radius}"/>
      </geometry>
      <origin rpy="${PI/2} 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <origin rpy="${PI/2} 0 0" xyz="0 0 0"/>
      <mass value="${wheel_mass}"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Back Left Wheel (added for 4-wheel configuration) -->
  <joint name="${prefix}back_left_wheel_joint" type="fixed">
    <parent link="${prefix}base_link"/>
    <child link="${prefix}back_left_wheel"/>
    <origin xyz="-0.1016 0.1329 0" rpy="0 0 0"/>
  </joint>

  <link name="${prefix}back_left_wheel">
    <visual>
      <origin rpy="${PI/2} 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="${wheel_len}" radius="${wheel_radius}"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="${wheel_len}" radius="${wheel_radius}"/>
      </geometry>
      <origin rpy="${PI/2} 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <origin rpy="${PI/2} 0 0" xyz="0 0 0"/>
      <mass value="${wheel_mass}"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Back Right Wheel (added for 4-wheel configuration) -->
  <joint name="${prefix}back_right_wheel_joint" type="fixed">
    <parent link="${prefix}base_link"/>
    <child link="${prefix}back_right_wheel"/>
    <origin xyz="-0.1016 -0.1329 0" rpy="0 0 0"/>
  </joint>

  <link name="${prefix}back_right_wheel">
    <visual>
      <origin rpy="${PI/2} 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="${wheel_len}" radius="${wheel_radius}"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="${wheel_len}" radius="${wheel_radius}"/>
      </geometry>
      <origin rpy="${PI/2} 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <origin rpy="${PI/2} 0 0" xyz="0 0 0"/>
      <mass value="${wheel_mass}"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  </xacro:macro>

</robot>
